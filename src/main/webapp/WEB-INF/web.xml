<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
    version="3.1">

    <display-name>Dep</display-name>
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>AuthServlet</servlet-name>
        <servlet-class>ma.fsts.info.Controllers.AuthServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AuthServlet</servlet-name>
        <url-pattern>/auth</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AddDepServlet</servlet-name>
        <servlet-class>ma.fsts.info.Controllers.AddDepServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddDepServlet</servlet-name>
        <url-pattern>/AddDep</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DepartmentsServlet</servlet-name>
        <servlet-class>ma.fsts.info.Controllers.DepartmentsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DepartmentsServlet</servlet-name>
        <url-pattern>/depController</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>FiliereServlet</servlet-name>
        <servlet-class>ma.fsts.info.Controllers.FiliereServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FiliereServlet</servlet-name>
        <url-pattern>/filController</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AddFilServlet</servlet-name>
        <servlet-class>ma.fsts.info.Controllers.AddFilServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddFilServlet</servlet-name>
        <url-pattern>/Addfil</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>ma.fsts.info.Controllers.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>


